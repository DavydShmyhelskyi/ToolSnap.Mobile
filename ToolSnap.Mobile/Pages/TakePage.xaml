<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToolSnap.Mobile.Pages.TakePage"
             x:Name="TakePageRoot"
             Title="Take a Tool"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Preview -->
            <Border HeightRequest="250"
                    Stroke="#DDDDDD"
                    StrokeThickness="1"
                    BackgroundColor="White"
                    StrokeShape="RoundRectangle 12">
                <Image x:Name="PreviewImage"
                       Aspect="AspectFill" />
            </Border>

            <!-- Camera / Gallery Buttons -->
            <Grid ColumnDefinitions="*,*"
                  ColumnSpacing="15">

                <Button Text="Camera"
                        HeightRequest="55"
                        CornerRadius="10"
                        BackgroundColor="#1976D2"
                        TextColor="White"
                        Clicked="OnCameraClicked" />

                <Button Text="Gallery"
                        Grid.Column="1"
                        HeightRequest="55"
                        CornerRadius="10"
                        BackgroundColor="#455A64"
                        TextColor="White"
                        Clicked="OnGalleryClicked" />
            </Grid>

            <!-- Loader -->
            <ActivityIndicator
                IsRunning="{Binding Source={x:Reference TakePageRoot}, Path=IsLoading}"
                IsVisible="{Binding Source={x:Reference TakePageRoot}, Path=IsLoading}"
                HeightRequest="40"
                WidthRequest="40"
                HorizontalOptions="Center" />

            <!-- Take Button -->
            <Button
                Text="Take"
                x:Name="TakeButton"
                IsEnabled="False"
                Clicked="OnTakeClicked"
                HeightRequest="60"
                CornerRadius="12"
                BackgroundColor="#388E3C"
                TextColor="White"
                FontSize="20" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>