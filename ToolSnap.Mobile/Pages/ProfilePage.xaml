<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToolSnap.Mobile.Pages.ProfilePage"
             Title="Profile">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <!-- Заголовок -->
            <Label Text="Profile"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Блок інформації про користувача (read-only) -->
            <Border
    Padding="16"
    StrokeThickness="1"
    Stroke="#DDDDDD"
    BackgroundColor="White"
    StrokeShape="RoundRectangle 12">
                <VerticalStackLayout Spacing="8">

                    <Label Text="User info"
               FontAttributes="Bold"
               FontSize="18"
               TextColor="Black" />

                    <Grid ColumnDefinitions="Auto, *"
              RowDefinitions="Auto,Auto,Auto,Auto,Auto">

                        <!-- Full name -->
                        <Label Text="Full name:"
                   Grid.Row="0"
                   Grid.Column="0"
                   FontAttributes="Bold"
                   Margin="0,0,8,0"
                   TextColor="Black" />
                        <Label x:Name="FullNameLabel"
                   Grid.Row="0"
                   Grid.Column="1"
                   TextColor="Black" />

                        <!-- Email -->
                        <Label Text="Email:"
                   Grid.Row="1"
                   Grid.Column="0"
                   FontAttributes="Bold"
                   Margin="0,4,8,0"
                   TextColor="Black" />
                        <Label x:Name="EmailLabel"
                   Grid.Row="1"
                   Grid.Column="1"
                   Margin="0,4,0,0"
                   TextColor="Black" />

                        <!-- Email confirmed -->
                        <Label Text="Email confirmed:"
                   Grid.Row="2"
                   Grid.Column="0"
                   FontAttributes="Bold"
                   Margin="0,4,8,0"
                   TextColor="Black" />
                        <Label x:Name="ConfirmedEmailLabel"
                   Grid.Row="2"
                   Grid.Column="1"
                   Margin="0,4,0,0"
                   TextColor="Black" />

                        <!-- Active -->
                        <Label Text="Status:"
                   Grid.Row="3"
                   Grid.Column="0"
                   FontAttributes="Bold"
                   Margin="0,4,8,0"
                   TextColor="Black" />
                        <Label x:Name="IsActiveLabel"
                   Grid.Row="3"
                   Grid.Column="1"
                   Margin="0,4,0,0"
                   TextColor="Black" />

                        <!-- Created at -->
                        <Label Text="Created at:"
                   Grid.Row="4"
                   Grid.Column="0"
                   FontAttributes="Bold"
                   Margin="0,4,8,0"
                   TextColor="Black" />
                        <Label x:Name="CreatedAtLabel"
                   Grid.Row="4"
                   Grid.Column="1"
                   Margin="0,4,0,0"
                   TextColor="Black" />
                    </Grid>

                </VerticalStackLayout>
            </Border>

            <!-- Кнопка для відкриття секції -->
            <Button Text="Change password"
        x:Name="TogglePasswordPanelButton"
        Clicked="OnTogglePasswordPanelClicked"
        Margin="0,10,0,0"
        HorizontalOptions="Center" />

            <!-- Блок зміни пароля (прихований за замовчуванням) -->
            <VerticalStackLayout x:Name="PasswordPanel"
                     IsVisible="False">

                <Border
        Padding="16"
        StrokeThickness="1"
        Stroke="#DDDDDD"
        BackgroundColor="White"
        StrokeShape="RoundRectangle 12">

                    <VerticalStackLayout Spacing="12">

                        <Label Text="Change password"
                   FontAttributes="Bold"
                   FontSize="18"
                   TextColor="Black" />

                        <Entry x:Name="CurrentPasswordEntry"
                   Placeholder="Current password"
                   IsPassword="True" 
                   TextColor="Black"/>

                        <Entry x:Name="NewPasswordEntry"
                   Placeholder="New password"
                   IsPassword="True" 
                   TextColor="Black"/>

                        <Entry x:Name="ConfirmPasswordEntry"
                   Placeholder="Confirm new password"
                   IsPassword="True" 
                   TextColor="Black"/>

                        <Button x:Name="ChangePasswordButton"
                    Text="Update password"
                    Clicked="OnChangePasswordClicked" />

                    </VerticalStackLayout>

                </Border>

            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>