<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToolSnap.Mobile.Pages.ReturnPage"
             Title="Return Tools">

    <Grid RowDefinitions="*,Auto,Auto" Padding="20">

        <Image x:Name="PreviewImage"
               Grid.Row="0"
               Aspect="AspectFit" />

        <HorizontalStackLayout Grid.Row="1" Spacing="10" HorizontalOptions="Center">
            <Button Text="Camera" Clicked="OnCameraClicked" />
            <Button Text="Gallery" Clicked="OnGalleryClicked" />
        </HorizontalStackLayout>

        <Button x:Name="ReturnButton"
                Grid.Row="2"
                Text="Return"
                IsEnabled="False"
                Clicked="OnReturnClicked"
                Margin="0,10,0,0" />

    </Grid>
</ContentPage>