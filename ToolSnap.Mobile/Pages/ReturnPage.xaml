<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToolSnap.Mobile.Pages.ReturnPage"
             Title="Return a Tool"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Preview -->
            <Border HeightRequest="250"
                    Stroke="#DDDDDD"
                    StrokeThickness="1"
                    BackgroundColor="White"
                    StrokeShape="RoundRectangle 12">
                <Image x:Name="PreviewImage"
                       Aspect="AspectFill" />
            </Border>

            <!-- Camera / Gallery Buttons -->
            <Grid ColumnDefinitions="*,*"
                  ColumnSpacing="15">

                <Button Text="Camera"
                        HeightRequest="55"
                        CornerRadius="10"
                        BackgroundColor="#1976D2"
                        TextColor="White"
                        Clicked="OnCameraClicked" />

                <Button Text="Gallery"
                        Grid.Column="1"
                        HeightRequest="55"
                        CornerRadius="10"
                        BackgroundColor="#455A64"
                        TextColor="White"
                        Clicked="OnGalleryClicked" />
            </Grid>

            <!-- Return Button -->
            <Button
                Text="Return"
                x:Name="ReturnButton"
                IsEnabled="False"
                Clicked="OnReturnClicked"
                HeightRequest="60"
                CornerRadius="12"
                BackgroundColor="#F57C00"
                TextColor="White"
                FontSize="20" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>