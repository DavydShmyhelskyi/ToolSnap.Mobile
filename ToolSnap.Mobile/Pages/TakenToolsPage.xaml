<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToolSnap.Mobile.Pages.TakenToolsPage"
             Title="Taken Tools"
             BackgroundColor="#F5F5F5">

    <ContentPage.Content>
        <Grid RowDefinitions="Auto,*"
              Padding="16">

            <!-- Заголовок всередині сторінки -->
            <Label Grid.Row="0"
                   Text="Taken tools"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#222222"
                   Margin="0,0,0,8" />

            <!-- Список інструментів -->
            <CollectionView Grid.Row="1"
                            x:Name="ToolsCollectionView"
                            ItemsSource="{Binding Tools}"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <!-- Окрема картка -->
                        <Border Margin="0,4"
                                Padding="10"
                                BackgroundColor="White"
                                Stroke="#E0E0E0"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 12">

                            <Grid ColumnDefinitions="Auto,*"
                                  ColumnSpacing="12">

                                <!-- Фото -->
                                <Border WidthRequest="70"
                                        HeightRequest="70"
                                        Padding="0"
                                        StrokeThickness="0"
                                        BackgroundColor="#EEEEEE"
                                        StrokeShape="RoundRectangle 8">

                                    <Image Source="{Binding Photo}"
                                           Aspect="AspectFill" />
                                </Border>

                                <!-- Інфа про інструмент -->
                                <VerticalStackLayout Grid.Column="1"
                                                     Spacing="4"
                                                     VerticalOptions="Center">

                                    <!-- Тип інструменту -->
                                    <Label Text="{Binding ToolTypeTitle}"
                                           FontAttributes="Bold"
                                           FontSize="16"
                                           TextColor="#222222" />

                                    <!-- Серійний номер -->
                                    <Label Text="{Binding SerialNumber}"
                                           FontSize="14"
                                           TextColor="#777777" />

                                </VerticalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ContentPage.Content>
</ContentPage>